<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    tools:context="fr.joeybronner.freehandtwitter.TweetFlipperActivity" >

    <ProgressBar
        android:id="@+id/ProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:maxHeight="5dip"
        android:minHeight="5dip"
        android:progressDrawable="@drawable/myprogress" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:baselineAligned="false"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/tweetLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:orientation="horizontal" >

            <ViewFlipper
                android:id="@+id/viewflipper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/btShare"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:contentDescription="@string/nodescription"
                        android:src="@drawable/share_dark" />

                    <fr.joeybronner.freehandtwitter.util.RoundedImageView
                        android:id="@+id/ivUser"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:contentDescription="@string/nodescription"
                        android:src="@drawable/nouserpicture" />

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ivUser"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="@string/name"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvName"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="0dp"
                        android:gravity="center"
                        android:text="@string/screen_name"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvTweetContent"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_below="@+id/textView1"
                        android:autoLink="web"
                        android:gravity="center"
                        android:text="@string/tweet_exemple"
                        android:textSize="28sp" />
                </RelativeLayout>
            </ViewFlipper>
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/btTweetBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/nodescription"
                android:src="@drawable/tweetback_dark" />

            <ImageView
                android:id="@+id/btTweetPlayPause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/nodescription"
                android:src="@drawable/tweetpause_dark" />

            <ImageView
                android:id="@+id/btTweetNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/nodescription"
                android:src="@drawable/tweetnext_dark" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>