<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.joeybronner.freehandtwitter"
    android:versionCode="5"
    android:versionName="2.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@android:style/Theme.DeviceDefault.Light.NoActionBar" >
        <activity
            android:name="fr.joeybronner.freehandtwitter.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="fr.joeybronner.freehandtwitter.ResultActivity"
            android:label="@string/title_activity_result"
            android:theme="@android:style/Theme.DeviceDefault.Light.Dialog.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.joeybronner.freehandtwitter.MainActivity" />
        </activity>
        <activity
            android:name="fr.joeybronner.freehandtwitter.MoreActivity"
            android:label="@string/title_activity_more" >
        </activity>
        <activity
            android:name="fr.joeybronner.freehandtwitter.TweetFlipperActivity"
            android:label="@string/title_activity_tweet_flipper"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="fr.joeybronner.freehandtwitter.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="fr.joeybronner.freehandtwitter.LoadingActivity"
            android:label="@string/title_activity_loading" >
        </activity>
    </application>

</manifest>